<header>Create a pink drink!</header>


<div class="form">
  <%= simple_form_for @cocktail do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.input :photo, as: :file %>

      <%= f.simple_fields_for :doses do |d|  %>

        <%= d.association :ingredient  %>
        <%= d.text_field :description  %>

      <% end %>

    <%= f.submit %>
    <%= link_to 'back', cocktails_path %>
  <% end %>

</div>

